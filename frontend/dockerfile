# Estágio 1: Build da aplicação Vite/React
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
# Gera a pasta 'dist' com os arquivos estáticos otimizados
RUN npm run build

# Estágio 2: Servidor web com Nginx
FROM nginx:stable-alpine

# Copia o arquivo de configuração do Nginx que vamos criar a seguir
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copia os arquivos da pasta 'dist' para a pasta que o Nginx serve
COPY --from=builder /app/dist /usr/share/nginx/html

# Expõe a porta 80, padrão para web
EXPOSE 80

# Comando para iniciar o Nginx
CMD ["nginx", "-g", "daemon off;"]